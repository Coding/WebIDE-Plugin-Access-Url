.access-url {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}
.access-url-container {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  overflow: auto;
  .access-url-panel {
    .panel-heading {
      height: 28px;
      line-height: 28px;
      background-color: $pane-item-background-color;
      padding: 0 10px;
      display: flex;
      input {
        line-height: 16px;
        margin-left: 6px;
        vertical-align: top;
        margin-top: 3px;
        margin-right: 6px;
      }
      .btn {
        margin-left: 6px;
        vertical-align: top;
        margin-top: 3px;
      }
      .fa-refresh {
        position: absolute;
        top: 7px;
        right: 10px;
        cursor: pointer;
        &:hover {
          opacity: .5;
        }
      }
      .panel-title {
        flex: 1;
        .fa {
          margin-right: 4px;
        }
      }
      .panel-title-right {
        padding-right: 20px;
        .opt-label {
          cursor: pointer;
          .fa {
            margin-right: 4px;
            &:hover {
              opacity: .5;
            }
          }
        }
      }
    }
    .panel-body {
      min-width: 280px;
      position: absolute;
      top: 28px;
      bottom: 0;
      left: 0;
      right: 0;
      overflow: auto;
      .create-url {
        padding-bottom: 20px;
        border-bottom: 1px solid #f5f5f5;
        .url-tip {
          padding: 10px;
          line-height: 20px;
          font-size: 12px;
          color: #737373;
        }
        .url-generate {
            display: flex;
          .port {
            display: flex;
            align-items: center;
            height: 36px;
            padding: 0 5px 0 10px;
            margin: 0 10px;
            border: 2px solid #404040;
            border-radius: 2px;
            span {
              color: #6e6e6e;
            }
            input {
              width: 70px;
              height: 100%;
              margin: 0 5px;
              border: none;
              outline: none;
              background-color: transparent;
            }
            .change {
                display: block;
                width: 10px;
                .fa {
                  width: 10px;
                  height: 15px;
                  line-height: 15px;
                  cursor: pointer;
                }
            }
          }
        }
      }
    }
    .port-item {
      padding: 10px;
      border-bottom: 1px solid $pane-item-background-color;
      position: relative;
      display: flex;
      align-items: center;
      .qrcode {
        font-size: 46px;
        margin-right: 8px;
      }
      .port-content {
        flex-grow: 1;
        line-height: 14px;
        word-break: break-all;
      }
      .extra {
        .fa {
          margin-right: 10px;
          cursor: pointer;
        }
      }
      .post-item-info {
        line-height: 22px;
        display: flex;
        align-items: center;
        padding-top: 4px;
      }
      .post-item-ttl {
        width: 120px;
        font-weight: normal;
        margin-bottom: 0;
        line-height: 26px;
      }
      .post-item-upgrade {
        color: #4377b6;
        cursor: pointer;
        .fa {
          margin-right: 4px;
        }
      }
    }
    .qr-container {
      display: none;
      position: absolute;
      background: #FFF
      width: 136px;
      height: 136px;
      border: 4px solid #FFF;
      overflow: hidden;
      box-shadow: 0 4px 20px 1px rgba(0, 0, 0, .3);
      // padding: 5px;
      &.show {
        display: block;
      }
    }
  }
}
